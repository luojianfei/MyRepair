<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_stroke"
        android:orientation="vertical"
        android:padding="1dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#FEF2E7"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:textStyle="bold"
                android:textColor="#111"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03"
                android:layout_marginLeft="4dp"
                android:textStyle="bold"
                android:textColor="#111"
                android:textSize="24sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即维修"
                android:layout_marginLeft="8dp"
                android:textColor="@color/app_second_color"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="建议01-01 14:30到达"
                android:layout_marginLeft="8dp"
                android:textColor="#B7B7B7"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修理完成"
                android:layout_marginLeft="8dp"
                android:textColor="@color/app_second_color"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:text="李爸爸"
                android:textColor="#111"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:gravity="bottom"
                android:drawablePadding="4dp"
                android:text="138888888888"
                android:drawableLeft="@drawable/icon_telephone_juice"
                android:textColor="@color/app_second_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#B7B7B7"
                android:textSize="14sp"
                android:text="朝阳区兰亭美术馆  ＜1000米"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:text="维修项目：插座"
                android:textColor="#111"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#B7B7B7"
                android:textSize="14sp"
                android:text="01-01 14:00下单"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#B7B7B7"
                android:textSize="14sp"
                android:text="查看更多维修详情 ＞"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="本单预计收入"
                    android:textColor="#111"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="￥72"
                    android:layout_alignParentRight="true"
                    android:textColor="#111"
                    android:textSize="16sp" />

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="#B7B7B7"
                android:textSize="14sp"
                android:text="本单顾客实际支出：￥80"
                />
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="24dp"
                android:text="确认订单"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/btn_sure"
                android:textColor="#FFFFFF"
                android:onClick="@{clickListener}"
                android:background="@drawable/selector_radiu_juice_btn"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客服"
                    android:id="@+id/tv_service"
                    android:drawablePadding="12dp"
                    android:gravity="center"
                    android:drawableTop="@drawable/icon_headset"
                    android:textColor="#111"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#B7B7B7"
                    android:textSize="14sp"
                    android:id="@+id/tv_time"
                    android:layout_alignParentRight="true"
                    android:text="01-01 14:00下单"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#B7B7B7"
                    android:textSize="14sp"
                    android:layout_below="@id/tv_time"
                    android:id="@+id/tv_order_number"
                    android:layout_alignParentRight="true"
                    android:text="订单号：862017010103111"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</layout>