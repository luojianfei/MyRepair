<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arf_header"
        android:layout_width="match_parent"
        android:layout_height="112px"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/arf_h_cancle"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:src="@drawable/cancle" />

        <TextView
            android:id="@+id/arf_h_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/ars_register"
            android:textColor="@color/color_000000"
            android:textSize="16sp" />

    </com.zhy.autolayout.AutoRelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/color_bbbbbb" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/arf_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92px"
        android:paddingLeft="32px"
        android:paddingRight="32px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/art_phone_audit"
            android:textColor="@color/color_111111"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/arf_next"
            android:layout_width="match_parent"
            android:layout_height="102px"
            android:layout_alignParentBottom="true"
            android:background="@color/app_base_color"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/app_second_color"
            android:textSize="14sp" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>